<div class= "container">

    <% if @book.errors.any? %>
     <%= @book.errors.count %>errors prohibited this book from being saved:
      <ul>
       <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
       <% end %>
      </ul>
    <% end %>
 <div class="row">
   <div class="col-md-3">

    <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
       <table class= "table">
        <tr>
         <th>name</th>
         <th><%= @user.name %></th>
        </tr>
        <tr>
         <th>introduction</th>
         <th><%= @user.introduction %></th>
        </tr>
      </table>

     <% if @user == current_user %>
      <%= link_to edit_user_path(@user), :class=>"btn btn-outline-secondary w-100 my-3" do %>
       <i class="fas fa-user-cog"></i></button>
      <% end %>
     <% else%>
      <%= link_to user_path(@user), :class=>"btn btn-outline-secondary w-100 my-3" do %>
      <% end %>
     <% end %>


    <h2>New book</h2>
      <%= form_with model:@book do |f| %>
        <label for="title">Tiltle</label></br>
      <%= f.text_field :title %></br>
        <label for="body">Opinion</label></br>
      <%= f.text_area :body %></br>
     <%= f.submit "Create Book", :class=>"btn btn-success" %>
    <% end %>
   </div>

  <div class= "col-md-8 offset-md-1">
   <h2>Books</h2>
    <table class="table">
     <thead>
      <tr>
       <th></th>
       <th>Tiltle</th>
       <th>Opinion</th>
      </tr>
     </thead>
    <tbody>
    <% @books.each do |book| %>
     <tr>
      <td><%= link_to user_path(book.user) do %>
           <%= image_tag book.user.get_profile_image(80,80) %>
          <% end %></td>
      <td><%= link_to book.title,book_path(book.id) %></td>
      <td><%= book.body %></td>
     </tr>
    <% end %>
   </tbody>
  </table>
 </div>
</div>
