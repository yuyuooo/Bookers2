<div class= "container">
 <div class="row">
  <div class="col-lg-3">
   <h2>New book</h2>
    <% if @book.errors.any? %>
     <%= @book.errors.count %>errors prohibited this book from being saved:
      <ul>
       <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
       <% end %>
     </ul>
    <% end %>
    <%= form_with model:@book do |f| %>
     <label for="title">Tiltle</label></br>
     <%= f.text_field :title %></br>
     <label for="body">Opinion</label></br>
     <%= f.text_area :body %></br>
     <%= f.submit "Create Book" %>
    <% end %>
    </div>

  <div class= "col-lg-8 offset-lg-1">
   <h2>Books</h2>
    <table class="table">
     <thead>
      <tr>
       <th></th>
       <th>Tiltle</th>
       <th>Opinion</th>
      </tr>
     </thead>
    <tbody>
    <% @books.each do |book| %>
    <tr>
     
     <td><%= image_tag @user.get_profile_image(80,80) %></td>
     <td><%= link_to book.title,book_path(book) %></td>
     <td><%= book.body %></td>
   </tr>
   <% end %>
   </tbody>
  </table>
 </div>
</div>
