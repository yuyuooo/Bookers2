<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/d6736d4411.js" crossorigin="anonymous"></script>
  </head>

  <body>
   <header class="bg-dark mb-3">
    <nav class="navbar navbar-expand-lg navbar-light">
     <div class="container">
      <a class="navbar-brand text-white" href="/">Bookers</a>
       <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
       </button>
      
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
         <ul class="navbar-nav ml-auto">
          
          <% if user_signed_in? %>
          
           <li class="nav-link">
            <%= link_to user_path(id:current_user.id),class: "btn btn-dark" do %>
             <i class="fas fa-home"></i> Home
            <% end %>
           </li>
         
           <li class="nav-link">
            <%= link_to '/users',class: "btn btn-dark" do %>
             <i class="fas fa-users"></i> Users
            <% end %>
           </li>
           
           <li class="nav-link">
            <%= link_to books_path,class: "btn btn-dark" do %>
             <i class="fas fa-book-open"></i> Books
            <% end %>
           </li>
           
           <li class="nav-link">
            <%= link_to destroy_user_session_path, method: :delete,class: "btn btn-dark" do %>
             <i class="fas fa-sign-out-alt"></i> Log out
            <% end %>
          </li>
          
        <% else %>
        
          <li class="nav-link">
           <%= link_to root_path,class: "btn btn-dark" do %>
            <i class="fas fa-home"></i> Home
           <% end %>
         </li>


         <li class="nav-link">
          <%= link_to home_about_path,class: "btn btn-dark" do %>
           <i class="fas fa-link"></i> About
          <% end %>
         </li>
       
       
         <li class="nav-link">
          <%= link_to new_user_registration_path,class: "btn btn-dark" do %>
           <i class="fas fa-user-plus"></i> Sign up
          <% end %>
         </li>
      
         <li class="nav-link">
          <%= link_to new_user_session_path,class: "btn btn-dark" do %>
           <i class="fas fa-sign-in-alt"></i> Log in
          <% end %>
         </li>
         
        <% end %>
       </ul>
      </div>
     </div>
    </nav>
  </header>
 
      <main class= "container">

       <% if flash[:notice] %>
         <%= flash[:notice] %>
       <% end %>

      <%= yield %>
      </main>

   <footer>
     <div class="mx-auto mt-5" style="width: 200px;">CopyRight Infratop.inc</div>
   </footer>
  
  </body>
</html>
